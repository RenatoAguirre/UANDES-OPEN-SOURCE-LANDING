---
import { Image } from "astro:assets";

interface props {
  name: string;
  description: string;
  url: string;
  createdAt: Date;
  updatedAt: Date;
  openGraphImageUrl: string;
  usesCustomOpenGraphImage: boolean;
  homepageUrl: string;
}
const {
  name,
  description,
  url,
  createdAt,
  updatedAt,
  openGraphImageUrl,
  usesCustomOpenGraphImage,
  homepageUrl,
} = Astro.props;

---

<li
  class="bg-gray-800
  border-gray-700
  rounded-lg
  shadow-lg
  hover:scale-105
  duration-300
  ease-in-out
  overflow-hidden
  transition

  flex flex-col"
>
  <picture>
    <Image src={openGraphImageUrl} alt=`${name}` class="" inferSize={true} />
  </picture>

  <div class="p-4">
    <div class="flex justify-between">
    <h2 class="text-xl font-semibold text-white underline">
      <a href={url} class="block" target="_blank" rel="noopener noreferrer">
        {name}
      </a>
    </h2>
    {homepageUrl && (
      <a
        aria-label="pageUrl"
        href=`${homepageUrl}`
        class=" text-white"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-world-www"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" /><path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" /><path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" /><path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" /><path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" /><path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" /><path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" /><path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" /></svg>
      </a>
    )}
    </div>
    <p class="text-gray-400">
      {description}
    </p>
    <br />
    <p class="text-sm text-gray-400">
      Creado: {new Date(createdAt).toLocaleDateString()}
    </p>
    <p class="text-sm text-gray-400">
      Ultimo update: {new Date(updatedAt).toLocaleDateString()}
    </p>
  </div>
</li>
