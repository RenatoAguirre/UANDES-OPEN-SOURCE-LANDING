---
import HeaderButton from "./HeaderButton.astro";
import { Image } from "astro:assets";
import openUANDESLogo from "../../assets/open-s-uandes-logo.png";
const userName = import.meta.env.PUBLIC_GITHUB_USER;
---

<header class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
  <Image src={openUANDESLogo} alt="Open Source UANDES" class="w-16 mx-auto" />
  <h1 class="text-6xl text-white font-bold text-center">
    Open Source UANDES ðŸ‡¨ðŸ‡±
  </h1>
  <p class="mt-4 text-lg text-gray-500 text-center lg:mt-6 lg:text-xl">
    Una comunidad de estudiantes de @<a
      class="text-bold underline text-nowrap"
      href="https://www.uandes.cl/"
      target="_blank"
      rel="noopener noreferrer">Universidad de los andes</a
    >
  </p>
  <githublogo></githublogo>
  <nav
    class="flex flex-col items-center justify-center mt-8 lg:flex-row lg:mt-12"
  >
    <HeaderButton link="#CONOCENOS">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path><path d="M12 9h.01"
        ></path><path d="M11 12h1v4h1"></path></svg
      >Conocenos</HeaderButton
    >
    <HeaderButton link="#PROYECTOS">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-briefcase-2"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M3 9a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v9a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-9z"
        ></path><path d="M8 7v-2a2 2 0 0 1 2 -2h4a2 2 0 0 1 2 2v2"></path></svg
      >Proyectos</HeaderButton
    >
    <HeaderButton link="#EVENTOS">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-ticket"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M15 5l0 2"></path><path d="M15 11l0 2"></path><path d="M15 17l0 2"
        ></path><path
          d="M5 5h14a2 2 0 0 1 2 2v3a2 2 0 0 0 0 4v3a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-3a2 2 0 0 0 0 -4v-3a2 2 0 0 1 2 -2"
        ></path></svg
      >Eventos</HeaderButton
    ><a
      href=`https://github.com/${userName}`
      target="_blank"
      rel="noopener noreferrer"
      class="text-white flex items-center justify-center w-full gap-1 px-5 py-4 text-xl duration-300 md:w-auto md:py-2 md:text-base hover:scale-110 focus:scale-110"
    >
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
        ></path></svg
      >Github</a
    >
  </nav>
</header>
